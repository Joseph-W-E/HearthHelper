<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androiddev.josephelliott.hearthhelper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllCardsActivity.AllCardsActivity"
            android:label="@string/all_cards_activity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".ChallengeActivity.ChallengeActivity"
            android:label="@string/challenge_activity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".DeckBuilderActivity.DeckBuilderActivity"
            android:label="@string/deck_builder_activity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".WinTrackerActivity.WinTrackerActivity"
            android:label="@string/win_tracker_activity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>